{
  "name": "bart-loop",
  "version": "1.0.5",
  "description": "Automated task execution loop using Claude Code or OpenCode with TUI dashboard",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leandrostoroli/bart-loop.git"
  },
  "bin": {
    "bart": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dashboard": "bun run src/index.ts dashboard",
    "status": "bun run src/index.ts status",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "cli",
    "automation",
    "tasks",
    "claude",
    "opencode",
    "tui"
  ],
  "author": "Leandro Storoli",
  "license": "MIT",
  "dependencies": {
    "ink": "^6.7.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "src/**/*",
    "skills/**/*",
    "hooks/**/*",
    "bart-prompt-template.md",
    "scripts/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "optionalDependencies": {
    "bun": ">=1.0"
  }
}
